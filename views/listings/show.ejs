<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
        <div class="col-8 offset-2">

        
        <h3 class="offset-3">Listing-details</h3>
        <div class="card col-6 offset-3 show-card">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
                <div class="card-body">
                        <p class="card-text">
                                <b><%= listing.title %></b><br>
                                <%= listing.description %><br>
                                â‚¹<%= listing.price.toLocaleString("en-IN") %><br>
                                <%= listing.location %><br>
                                <%= listing.country %><br>
                        </p>
                </div>
        </div>
        <br>
        <div class="btns">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn w-25">Edit</a>
                <form method="post"  action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5 w-100">Delete</button>
        </form>
        </div>
        <br>
</div>
</div>